###########
# Aliases #
###########

alias gp="git push"

alias wifi_scan="nmcli device wifi"
alias wifi_connect="sudo nmcli --ask device wifi connect" # "SSID"

alias vpn_connect="sudo nmcli --ask connection up" # "name of the profile"
alias vpn_disconnect="sudo nmcli connection down" # "name of the profile"

alias bluetooth_up="bluetoothctl power on"
alias bluetooth_down="bluetoothctl power off"
alias bluetooth_scan="bluetoothctl power on && bluetoothctl scan on"
alias bluetooth_pair="bluetoothctl agent on && bluetoothctl pair" # "MAC"
alias bluetooth_connect="bluetoothctl connect" # "MAC"
alias bluetooth_disconnect="bluetoothctl disconnect" # "MAC"
alias bluetooth_devices="bluetoothctl devices"

